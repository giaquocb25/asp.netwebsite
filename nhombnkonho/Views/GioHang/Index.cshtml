<!-- cart main wrapper start -->
@if (ViewBag.GioHang != null)
{
<div class="cart-main-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Cart Table Area -->
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="pro-thumbnail">Ảnh</th>
                                <th class="pro-title">Tên Sản Phẩm</th>
                                <th class="pro-price">Giá</th>
                                <th class="pro-quantity">Số Lượng</th>
                                <th class="pro-subtotal">Tổng Giá</th>
                                <th class="pro-remove">Xóa Khỏi Giỏ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.GioHang)
                            {
                            <tr>
                                <td class="pro-thumbnail">
                                    <a href="#">
                                        <img class="img-fluid" src="@item.Anhbia"
                                             alt="Product" />
                                    </a>
                                </td>
                                <td class="pro-title"><a href="#">@item.TenSanPham</a></td>
                                <td class="pro-price"><span>@item.GiaKK VND</span></td>
                                <td class="pro-quantity"><div class="pro-qty"> <input type="text" value="@item.SoLuong"></div> </td>
                                <td class="pro-subtotal"><span> @item.GiaTong VND</span></td>
                                <td class="pro-remove"><a href="@Url.Action("xoakhoigio", "GioHang", new { id = item.MaSanPham})"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Cart Update Option -->
                <div class="cart-update-option d-block d-md-flex justify-content-between">
                    <div class="apply-coupon-wrapper">
                        <form action="#" method="post" class=" d-block d-md-flex">
                            <input type="text" placeholder="Nhập Mã Giảm Giá" required />
                            <button class="sqr-btn">Mã Giảm Giá</button>
                        </form>
                    </div>
                    <div class="cart-update mt-sm-16">
                        <a href="#" class="sqr-btn">Cập Nhật Giỏ Hàng</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-5 ml-auto">
                <!-- Cart Calculation Area -->
                <div class="cart-calculator-wrapper">
                  
                    <a href="/GioHang/ThanhToan" class="sqr-btn d-block">Thanh Toán</a>
                </div>
            </div>
        </div>
    </div>
</div>}
<!-- cart main wrapper end -->
