
@{
    ViewBag.Title = "Đăng Nhập";
}

@model nhombnkonho.Models.TaiKhoanMoldes
@using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login-register-wrapper">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row">
                    <!-- Login Content Start -->
                    <div class="col-lg-6">
                        <div class="login-reg-form-wrap  pr-lg-50">
                            <h2>Sign In</h2>
                            <form action="/TaiKhoan/DangKy" method="post">
                                <div class="single-input-item">
                                    @Html.LabelFor(x => x.TaiKhoan)
                                    @Html.TextBoxFor(x => x.TaiKhoan, new
                               {
                                   @class = "mb-0 from control",
                                   type = "text",
                                   id = "TaiKhoan",
                                   placeholder = "Nhập Tài Khoản của bạn"
                               })
                                   
                                </div>
                                <div class="single-input-item">
                                    @Html.LabelFor(x => x.MatKhau)
                                    @Html.PasswordFor(x => x.MatKhau, new
                                           {
                                               @class = "mb-0 from control",
                                               type = "Password",
                                               id = "MatKhau",
                                               placeholder = "Nhập Mật Khẩu của bạn"
                                           })
                                 
                                </div>
                                <div class="single-input-item">
                                    <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="rememberMe">
                                                <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                            </div>
                                        </div>
                                        <a href="#" class="forget-pwd">Forget Password?</a>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <input type="submit" value="Đăng Nhập " class="btn btn-outline-danger" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>}
